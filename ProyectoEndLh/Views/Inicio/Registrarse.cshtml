@model ProyectoEndLh.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="wrapper">
        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
            <h1>Registrate</h1>
            <div class="input-box">
                <input type="text" required asp-for="NombreUsuario">
                <label>Nombre Completo</label>
                <i class='bx bxs-user'></i>
            </div>

            <div class="input-box">
                <input type="email" required asp-for="Correo">
                <label>Correo</label>
                <i class='bx bxs-envelope'></i>
            </div>

            <div class="input-box">
                <input type="password" required asp-for="Clave">
                <label>Contraseña</label>
                <i class='bx bxs-lock-alt'></i>
            </div>

            <button type="submit" class="btn">Registrar</button>
            @if (ViewData["Mensaje"] != null)
            {
                <div class="form-group">
                    <p class="alert alert-danger">
                        @ViewData["Mensaje"]
                    </p>
                </div>
            }
            <div class="register-link">
                <p>  ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion", "Inicio")">Iniciar Sesion</a></p>
            </div>
        </form>
    </div>
</body>
</html>
